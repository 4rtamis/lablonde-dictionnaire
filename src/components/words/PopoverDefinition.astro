---
import { getEntry } from "astro:content";

const { wordId, triggerContent, classList } = Astro.props;
const word = await getEntry("words", wordId);
---

<span
  data-popover-target="popover-bottom"
  data-popover-placement="bottom"
  class={classList}>{triggerContent}</span
>
<div
  data-popover
  id="popover-bottom"
  role="tooltip"
  class="absolute z-10 invisible inline-block w-72 text-sm transition-opacity duration-300 rounded-lg shadow-sm opacity-0 border bg-white/70 dark:border-gray-500 dark:bg-gray-700/80 backdrop-blur"
>
  <div
    class="px-3 py-2 border-b border-gray-200 rounded-t-lg dark:border-gray-500"
  >
    <h3 class="font-semibold text-gray-900 dark:text-white">
      {word.data.mot}{"  "}
      <span class="text-yellow-500 font-normal"
        >{word.data.nature_abbreviation}</span
      >
    </h3>
  </div>
  <div class="px-3 py-2 font-light text-justify">
    <p>{word.data.definitions[0][0]}</p>
  </div>
  <div data-popper-arrow></div>
</div>
<script>
  import { Popover } from "flowbite";
</script>
