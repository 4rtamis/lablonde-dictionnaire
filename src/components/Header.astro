    id="top-logo"
    class="mx-auto max-w-screen-xl flex justify-center items-center"
  >
    <a href="/" class="flex items-center rtl:space-x-reverse">
      <Image
        src={blondeWoman}
        width="140"
        alt="Lablonde Logo."
        class="h-16 w-16 block dark:hidden"
      />
      <Image
        src={blondeWoman_dark}
        width="140"
        alt="Lablonde Logo."
        class="h-16 w-16 hidden dark:block"
      />
