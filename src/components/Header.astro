---
//import ThemeToggle from "./ThemeToggle";
import { Image } from "astro:assets";
import blondeWoman from "../assets/lablonde-light.svg";
import blondeWoman_dark from "../assets/lablonde-white.svg";
import Searchbar from "./Searchbar.astro";
import ThemeToggle from "./ThemeToggle";
---

<nav
  class="px-6 py-5 space-y-5 bg-transparent border-b border-yellow-500 dark:bg-transparent dark:border-gray-500 md:px-0"
>
  <div
    id="top-logo"
    class="container flex items-center justify-between mx-auto lg:max-w-4xl md:justify-center"
  >
    <a href="/" class="flex items-center rtl:space-x-reverse">
      <Image
        src={blondeWoman}
        width="140"
        alt="Lablonde Logo."
        class="block w-12 h-12 sm:h-16 sm:w-16 dark:hidden"
      />
      <Image
        src={blondeWoman_dark}
        width="140"
        alt="Lablonde Logo."
        class="hidden w-16 h-16 dark:block"
      />
      <span
        class="self-center ml-2 text-3xl text-yellow-500 uppercase sm:text-5xl whitespace-nowrap font-title sm:ml-3"
        >Lablonde</span
      >
    </a>
    <div>
      <button
        data-collapse-toggle="navbar-search"
        type="button"
        class="inline-flex items-center justify-center w-10 h-10 p-2 text-sm text-gray-900 rounded-lg md:hidden hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-gray-200 dark:text-gray-400 dark:hover:bg-gray-700 dark:focus:ring-gray-600"
        aria-controls="navbar-search"
        aria-expanded="false"
        id="nav-button"
      >
        <span class="sr-only">Ouvrir le menu</span>
        <svg
          class="w-5 h-5"
          aria-hidden="true"
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 17 14"
        >
          <path
            stroke="currentColor"
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M1 1h15M1 7h15M1 13h15"></path>
        </svg>
      </button>
    </div>
  </div>
  <div
    id="navigation"
    class="container flex flex-wrap items-center justify-between mx-auto lg:max-w-4xl md:py-4"
  >
    <div class="relative order-2 w-full md:block md:w-1/2 md:order-1">
      <Searchbar />
    </div>
    <ul
      id="navbar-search"
      class="flex-col order-1 hidden w-full p-4 mt-4 mb-8 text-lg font-medium border border-gray-300 md:order-2 md:mb-0 md:p-0 rounded-xl md:space-x-8 rtl:space-x-reverse md:flex-row md:items-center md:mt-0 md:border-0 dark:border-gray-500 md:flex md:w-auto"
    >
      <li>
        <a
          href="/"
          class="block px-3 py-2 text-gray-900 rounded hover:bg-yellow-500/10 md:hover:bg-transparent md:hover:text-yellow-600 md:p-0 md:dark:hover:text-yellow-500 dark:text-white dark:hover:bg-gray-700 dark:hover:text-white md:dark:hover:bg-transparent dark:border-gray-700"
          aria-current="page">Accueil</a
        >
      </li>
      <li>
        <a
          href="#"
          class="block px-3 py-2 text-gray-900 rounded hover:bg-yellow-500/10 md:hover:bg-transparent md:hover:text-yellow-600 md:p-0 md:dark:hover:text-yellow-500 dark:text-white dark:hover:bg-gray-700 dark:hover:text-white md:dark:hover:bg-transparent dark:border-gray-700"
          >Ã€ propos</a
        >
      </li>
      <li
        class="block px-3 py-2 text-gray-900 rounded hover:bg-yellow-500/10 md:hover:bg-transparent md:hover:text-yellow-600 md:p-0 md:dark:hover:text-yellow-500 dark:text-white dark:hover:bg-gray-700 dark:hover:text-white md:dark:hover:bg-transparent dark:border-gray-700"
      >
        <div class="flex items-center w-6 h-6">
          <ThemeToggle client:idle />
        </div>
      </li>
    </ul>
  </div>
</nav>
<script is:inline>
  document.getElementById("nav-button").onclick = () => {
    let classList = document.getElementById("navbar-search").classList;
    classList.toggle("hidden");
  };
</script>
