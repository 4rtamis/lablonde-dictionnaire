---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="fr" class="h-full w-full">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Le dictionnaire de référence des néologismes indispensables à la langue française. Enrichissez votre vocabulaire grâce aux plus fantaisistes des lexicographes de France."
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="w-full h-full bg-slate-100">
    <slot />
  </body>
</html>
<style is:global>
  @font-face {
    font-family: "ITC Symbol Std";
    src: url("/fonts/ITCSymbolStd-Medium.woff") format("woff");
    font-weight: 500;
    font-style: normal;
    font-display: swap;
  }

  .font-title {
    font-family: "ITC Symbol Std";
    font-weight: 500;
    font-style: normal;
  }
</style>
